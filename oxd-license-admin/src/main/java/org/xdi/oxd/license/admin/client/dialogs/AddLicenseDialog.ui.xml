<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

    <g:DialogBox ui:field="dialog" glassEnabled="true" animationEnabled="true" addStyleNames="dialog" width="700px">
        <g:VerticalPanel>
            <g:HTMLPanel>
                <h2>
                    <g:HTML>Add License</g:HTML>
                </h2>
            </g:HTMLPanel>
            <g:HorizontalPanel>
                <g:Label text="Type:"/>
                <g:ListBox ui:field="type">
                    <g:item value="FREE">Free</g:item>
                    <g:item value='PAID'>Paid</g:item>
                    <g:item value='PREMIUM'>Premium</g:item>
                </g:ListBox>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Label text="Threads:"/>
                <g:TextBox ui:field="threads"/>
            </g:HorizontalPanel>
            <g:HTML ui:field="errorMessage" visible="false"/>
            <g:HorizontalPanel>
                <g:Button ui:field="okButton">OK</g:Button>
                <g:Button ui:field="closeButton">Close</g:Button>
            </g:HorizontalPanel>
        </g:VerticalPanel>
    </g:DialogBox>
</ui:UiBinder>

