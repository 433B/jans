<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:a="urn:import:org.xdi.oxd.license.admin.client.ui"
        >

    <g:DockLayoutPanel ui:field="rootPanel">
        <g:north size='56'>
            <g:HTMLPanel>
                <h2>License Management</h2>
            </g:HTMLPanel>
        </g:north>
        <g:center>
            <g:TabLayoutPanel barHeight="3" barUnit="EM">
                <g:tab>
                    <g:header size='7'>
                        <b>Customer</b>
                    </g:header>
                    <g:HTMLPanel>
                        <a:CustomerTab ui:field="customerTab"/>
                    </g:HTMLPanel>
                </g:tab>
                <g:tab>
                    <g:header size='7'>
                        <b>License Crypt</b>
                    </g:header>
                    <g:Label>License Crypt</g:Label>
                </g:tab>
                <g:tab>
                    <g:header size='7'>
                        <b>License Exchange Id</b>
                    </g:header>
                    <g:Label>License Exchange Id</g:Label>
                </g:tab>
            </g:TabLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
